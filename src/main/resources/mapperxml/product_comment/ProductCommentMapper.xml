<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mapper_interface.product_comment.ProductCommentMapper">
    <insert id="commentSave" parameterType="CommentDTO">
        insert into comment(review_idx,customer_idx, product_idx,comment_contents)
        values(#{review_idx},#{customer_idx}, #{product_idx}, #{comment_contents})
    </insert>

    <select id="commentList"  resultType="CommentDTO">
        select * from comment
    </select>
</mapper>